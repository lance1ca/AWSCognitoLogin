<link rel="stylesheet" href="/resetPassword/resetPassword.css" type="text/css">
<script src="/resetPassword/resetPassword.js" type="text/javascript"></script>
<h1>Reset Password</h1>
<%=message%>




    <form  id="resetPassword" action="/users/resetPassword" method="POST">
        <input type="text" id="password_code" name="password_code" placeholder="Password Reset Code" required>
        <br>
        <input type="password" id="newPassword" name="newPassword" placeholder="New Password" required>
        <br>  
        <input type="submit" value="Reset Password">
        <br>
    </form>
