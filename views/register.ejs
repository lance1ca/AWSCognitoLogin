<link rel ="stylesheet" href="/register/register.css" type="text/css"> 

<script src="/register/register.js" type="text/javascript"></script>

<h1>REGISTER</h1>
<%=message%>

<form  id = "register" action="/users/register" method="POST">
    <input type="text" id="name" name="name" placeholder = "Name" required>
    <br>
    <input type="text" id="gender" name="gender" placeholder = "Gender" required>
    <br>
    <input type="email" id="email" name="email" placeholder = "Email" required>
    <br>
    <input type="phone" id="phone" name="phone" placeholder = "Phone" required>
    <br>
    <input type="password" id="password" name="password" placeholder = "Password" required>
    <br>
    <input type="password" id="password_confirm" name="password_confirm" placeholder = "Confirm Password" required>
    <br>
    <input type="submit" value="Register">
    <br>
    <a href="/users/login">Have an account? Login here</a>
</form>